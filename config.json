{
  "source": ["tokens/**/*.json"],
  "platforms": {

    "scss": {
      "transformGroup": "scss",
      "prefix": "--",
      "buildPath": "output/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "css": {
      "transformGroup": "css",
      "prefix": "--",
      "buildPath": "output/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    }
  }
}